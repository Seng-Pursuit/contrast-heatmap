{
  "productName": "Contrast Heatmap",
  "version": "0.1.0",
  "identifier": "com.contrastheatmap.desktop",
  "build": {
    "beforeDevCommand": "sh -c 'cd ui 2>/dev/null || cd ../ui; npm run dev -- --host 127.0.0.1 --port 5173'",
    "beforeBuildCommand": "sh -c 'cd ui 2>/dev/null || cd ../ui; npm run build'",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Contrast Heatmap",
        "width": 900,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.icns", "icons/icon.png"]
  }
}


